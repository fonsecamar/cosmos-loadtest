{
  "cosmosConnection": "AccountEndpoint=https://<your account>.documents.azure.com:443/;AccountKey=<account key>",
  "databaseName": "payments",
  "containerName": "transaction",
  "preferredRegion": [ "South Central US" ],
  "durationSec": 300,
  "printClientStats": true,
  "printResultRecord": true,
  "loadConfig": [
    {
      "taskCount": 1,
      "intervalMS": 1000,
      "applicationName": "Demo_Query_Transaction",
      "query": {
        "text": "select top 50 * from c where c.accountId = @accountId and c.type = \"transaction\" order by c.timestamp desc",
        "parameters": [
          {
            "name": "@accountId",
            "type": "random_int_as_string",
            "start": 1,
            "end": 1000000
          }
        ]
      }
    },
    {
      "taskCount": 1,
      "intervalMS": 1000,
      "applicationName": "Demo_Read_Account",
      "pointRead": {
        "partitionKey": "@accountId",
        "id": "@accountId",
        "parameters": [
          {
            "name": "@accountId",
            "type": "random_int_as_string",
            "start": 1,
            "end": 1000000
          }
        ]
      }
    },
    {
      "taskCount": 1,
      "intervalMS": 1000,
      "applicationName": "Demo_Create_Transaction",
      "allowBulk": false,
      "create": {
        "entity": {
          "id": "@id",
          "accountId": "@accountId",
          "description": "Transaction description",
          "merchant": "Merchant name",
          "type": "transaction",
          "amout": "@amount",
          "timestamp": "@timestamp"
        },
        "partitionKey": [
          "accountId"
        ],
        "parameters": [
          {
            "name": "@accountId",
            "type": "random_int_as_string",
            "start": 1,
            "end": 1000000
          },
          {
            "name": "@amount",
            "type": "random_int",
            "start": 1,
            "end": 1000
          },
          {
            "name": "@id",
            "type": "guid"
          },
          {
            "name": "@timestamp",
            "type": "datetime"
          }
        ]
      }
    },
    {
      "taskCount": 1,
      "intervalMS": 1000,
      "applicationName": "Demo_Upsert_Account",
      "allowBulk": false,
      "upsert": {
        "entity": {
          "id": "@accountId",
          "accountId": "@accountId",
          "firstName": "@firstName",
          "lastName": "@lastName",
          "balance": "@balance",
          "overdraftLimit": 1000,
          "lastModifiedAt": "@timestamp"
        },
        "partitionKey": [
          "accountId"
        ],
        "parameters": [
          {
            "name": "@accountId",
            "type": "random_int_as_string",
            "start": 1,
            "end": 1000000
          },
          {
            "name": "@firstName",
            "type": "Faker.FirstName"
          },
          {
            "name": "@lastName",
            "type": "Faker.LastName"
          },
          {
            "name": "@balance",
            "type": "random_int",
            "start": 0,
            "end": 10000
          },
          {
            "name": "@timestamp",
            "type": "datetime"
          }
        ]
      }
    },
    {
      "taskCount": 0,
      "intervalMS": 0,
      "applicationName": "Demo_Create_Account",
      "allowBulk": true,
      "create": {
        "entity": {
          "id": "@id",
          "accountId": "@id",
          "firstName": "@firstName",
          "lastName": "@lastName",
          "balance": "@balance",
          "overdraftLimit": 1000,
          "lastModifiedAt": "@timestamp"
        },
        "partitionKey": [
          "accountId"
        ],
        "parameters": [
          {
            "name": "@id",
            "type": "sequential_int_as_string",
            "start": 1
          },
          {
            "name": "@firstName",
            "type": "Faker.FirstName"
          },
          {
            "name": "@lastName",
            "type": "Faker.LastName"
          },
          {
            "name": "@balance",
            "type": "random_int",
            "start": 0,
            "end": 10000
          },
          {
            "name": "@timestamp",
            "type": "datetime"
          }
        ]
      }
    }
  ]
}