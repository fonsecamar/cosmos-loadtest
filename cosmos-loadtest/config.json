{
  "cosmosConnection": "",
  "databaseName": "db1",
  "containerName": "container1",
  "preferredRegion": "South Central US",
  "durationSec": 60,
  "printClientStats": true,
  "printResultRecord": true,
  "loadConfig": [
    {
      "taskCount": 0,
      "intervalMS": 1000,
      "applicationName": "Test_Query1",
      "query": {
        "text": "select * from c where c.id = @param1 and c.attribute1 = @param2",
        "parameters": [
          {
            "name": "@param1",
            "type": "sequential_int",
            "start": 1
          },
          {
            "name": "@param2",
            "type": "random_list",
            "list": [ "some hardcoded value", "some hardcoded value - updated" ]
          }
        ]
      }
    },
    {
      "taskCount": 0,
      "intervalMS": 1000,
      "applicationName": "Test_PointRead1",
      "pointRead": {
        "partitionKey": "@id",
        "id": "@id",
        "parameters": [
          {
            "name": "@id",
            "type": "sequential_int",
            "start": 1
          }
        ]
      }
    },
    {
      "taskCount": 0,
      "intervalMS": 1000,
      "applicationName": "Create_Object",
      "allowBulk": false,
      "create": {
        "entity": {
          "id": "@id",
          "uuid": "@uuid",
          "attribute1": "some hardcoded value",
          "attribute2": "@attribute2",
          "timestamp": "@timestamp"
        },
        "partitionKey": [
          "id"
        ],
        "parameters": [
          {
            "name": "@id",
            "type": "sequential_int",
            "start": 1
          },
          {
            "name": "@uuid",
            "type": "guid"
          },
          {
            "name": "@attribute2",
            "type": "random_int",
            "start": 1,
            "end": 100000
          },
          {
            "name": "@timestamp",
            "type": "datetime"
          }
        ]
      }
    },
    {
      "taskCount": 0,
      "intervalMS": 1000,
      "applicationName": "Upsert_Object",
      "allowBulk": false,
      "upsert": {
        "entity": {
          "id": "@id",
          "attribute1": "some hardcoded value - updated",
          "attribute2": "@attribute2",
          "timestamp": "@timestamp"
        },
        "partitionKey": [
          "id"
        ],
        "parameters": [
          {
            "name": "@id",
            "type": "sequential_int",
            "start": 1
          },
          {
            "name": "@uuid",
            "type": "guid"
          },
          {
            "name": "@attribute2",
            "type": "random_int",
            "start": 1,
            "end": 100000
          },
          {
            "name": "@timestamp",
            "type": "datetime"
          }
        ]
      }
    }
  ]
